.container-articles
  margin-bottom 20px
  .article
    margin-bottom 0

.article
  // header
  header
    float right
    padding 1em 0 0.5em 0
    border-bottom 1px solid #d7d7d7
    color #8d8d8d
    font-size 11px
    time
      padding 0 1em 0 0
      border-right 1px solid #e0e0e0
    .author
      padding 0 0 0 1em
  // titles
  .title, .subtitle
    margin 0
    padding 0.3em 0 0.8em
    color #1c9dd6
    font-weight 400
  .title
    font-size 24px
  .subtitle
    font-size 20px

  // content
  .image
    margin 10px 0 20px
    &.image-full-width img
      width 100%
      height auto
  p
